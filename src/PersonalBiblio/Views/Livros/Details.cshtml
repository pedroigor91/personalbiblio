@using PersonalBiblio.Models
@model PersonalBiblio.Models.Livro

@{
    ViewData["Title"] = "Detalhes do Livro";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a asp-action="Index" class="text-primary hover:text-blue-700 text-sm font-medium">
            ← Voltar para lista
        </a>
    </div>

    <div class="bg-white shadow rounded-lg overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-primary to-blue-600 px-6 py-8">
            <h1 class="text-2xl font-bold text-white">@Model.Titulo</h1>
            <p class="text-blue-100 mt-2">por @Model.Autor</p>
        </div>

        <!-- Conteúdo -->
        <div class="px-6 py-6 space-y-6">
            <!-- Status Badge -->
            <div>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
                    @(Model.Status == StatusLeitura.Lido ? "bg-green-100 text-green-800" :
                      Model.Status == StatusLeitura.Lendo ? "bg-yellow-100 text-yellow-800" :
                      "bg-purple-100 text-purple-800")">
                    @(Model.Status == StatusLeitura.Lido ? "✓ Lido" :
                      Model.Status == StatusLeitura.Lendo ? "◐ Lendo" : "☆ Quero Ler")
                </span>
            </div>

            <!-- Informações -->
            <div class="grid grid-cols-1 gap-4">
                <div class="border-b border-gray-200 pb-3">
                    <dt class="text-sm font-medium text-gray-500">Categoria</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Categoria?.Nome</dd>
                </div>

                @if (!string.IsNullOrEmpty(Model.ISBN))
                {
                    <div class="border-b border-gray-200 pb-3">
                        <dt class="text-sm font-medium text-gray-500">ISBN</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.ISBN</dd>
                    </div>
                }

                @if (Model.Ano.HasValue)
                {
                    <div class="border-b border-gray-200 pb-3">
                        <dt class="text-sm font-medium text-gray-500">Ano de Publicação</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.Ano</dd>
                    </div>
                }

                <div class="border-b border-gray-200 pb-3">
                    <dt class="text-sm font-medium text-gray-500">Data de Cadastro</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</dd>
                </div>

                @if (Model.DataAtualizacao.HasValue)
                {
                    <div class="border-b border-gray-200 pb-3">
                        <dt class="text-sm font-medium text-gray-500">Última Atualização</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.DataAtualizacao.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                    </div>
                }
            </div>

            <!-- Ações -->
            <div class="flex space-x-3 pt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" 
                   class="flex-1 text-center px-4 py-2 bg-primary text-white rounded-md hover:bg-blue-700 transition">
                    Editar
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" 
                   class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition">
                    Excluir
                </a>
            </div>
        </div>
    </div>
</div>
