@using PersonalBiblio.Models
@model IEnumerable<PersonalBiblio.Models.Livro>

@{
    ViewData["Title"] = "Livros";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Meus Livros</h1>
            <p class="mt-1 text-sm text-gray-500">Gerencie sua coleção de livros</p>
        </div>
        <a asp-action="Create" 
           class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-blue-700 transition">
            <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Novo Livro
        </a>
    </div>

    <!-- Filtros -->
    <div class="bg-white shadow rounded-lg p-6">
        <form asp-action="Index" method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <!-- Busca -->
            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">Buscar por título ou autor</label>
                <input type="text" name="busca" value="@ViewBag.Busca" 
                       placeholder="Digite para buscar..." 
                       class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"/>
            </div>
            
            <!-- Filtro Categoria -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Categoria</label>
                <select name="categoriaId" class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50">
                    <option value="">Todas</option>
                    @foreach (var categoria in ViewBag.Categorias as SelectList)
                    {
                        <option value="@categoria.Value" selected="@(categoria.Selected)">@categoria.Text</option>
                    }
                </select>
            </div>
            
            <!-- Filtro Status -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                <select name="status" class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50">
                    <option value="">Todos</option>
                    <option value="0" selected="@(ViewBag.Status == StatusLeitura.QueroLer)">Quero Ler</option>
                    <option value="1" selected="@(ViewBag.Status == StatusLeitura.Lendo)">Lendo</option>
                    <option value="2" selected="@(ViewBag.Status == StatusLeitura.Lido)">Lido</option>
                </select>
            </div>
            
            <div class="md:col-span-4 flex space-x-2">
                <button type="submit" 
                        class="px-4 py-2 bg-primary text-white rounded-md hover:bg-blue-700 transition">
                    Filtrar
                </button>
                <a asp-action="Index" 
                   class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition">
                    Limpar
                </a>
            </div>
        </form>
    </div>

    <!-- Lista de Livros -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
        @if (Model.Any())
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Livro</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categoria</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ano</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var livro in Model)
                        {
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4">
                                    <div class="flex flex-col">
                                        <div class="text-sm font-medium text-gray-900">@livro.Titulo</div>
                                        <div class="text-sm text-gray-500">@livro.Autor</div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                        @livro.Categoria?.Nome
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @(livro.Ano?.ToString() ?? "-")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                        @(livro.Status == StatusLeitura.Lido ? "bg-green-100 text-green-800" :
                                          livro.Status == StatusLeitura.Lendo ? "bg-yellow-100 text-yellow-800" :
                                          "bg-purple-100 text-purple-800")">
                                        @(livro.Status == StatusLeitura.Lido ? "Lido" :
                                          livro.Status == StatusLeitura.Lendo ? "Lendo" : "Quero Ler")
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                                    <a asp-action="Details" asp-route-id="@livro.Id" 
                                       class="text-blue-600 hover:text-blue-900">Ver</a>
                                    <a asp-action="Edit" asp-route-id="@livro.Id" 
                                       class="text-primary hover:text-blue-900">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@livro.Id" 
                                       class="text-red-600 hover:text-red-900">Excluir</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-12 px-6">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhum livro encontrado</h3>
                <p class="mt-1 text-sm text-gray-500">
                    @if (ViewBag.Busca != null || ViewBag.CategoriaId != null || ViewBag.Status != null)
                    {
                        <text>Tente ajustar os filtros ou adicionar um novo livro.</text>
                    }
                    else
                    {
                        <text>Comece adicionando seu primeiro livro à biblioteca.</text>
                    }
                </p>
                <div class="mt-6">
                    <a asp-action="Create"
                       class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-blue-700">
                        Adicionar Livro
                    </a>
                </div>
            </div>
        }
    </div>
</div>
