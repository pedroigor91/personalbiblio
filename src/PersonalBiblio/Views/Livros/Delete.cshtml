@using PersonalBiblio.Models
@model PersonalBiblio.Models.Livro

@{
    ViewData["Title"] = "Excluir Livro";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a asp-action="Index" class="text-primary hover:text-blue-700 text-sm font-medium">
            ← Voltar para lista
        </a>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
        <div class="flex items-center mb-6">
            <div class="flex-shrink-0">
                <svg class="h-12 w-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
            </div>
            <div class="ml-4">
                <h1 class="text-2xl font-bold text-gray-900">Confirmar Exclusão</h1>
                <p class="text-sm text-gray-600 mt-1">Esta ação não pode ser desfeita.</p>
            </div>
        </div>

        <div class="bg-gray-50 rounded-lg p-4 mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">@Model.Titulo</h3>
            <p class="text-gray-600">@Model.Autor</p>
            
            <dl class="mt-4 space-y-2">
                <div class="flex justify-between text-sm">
                    <dt class="text-gray-500">Categoria:</dt>
                    <dd class="text-gray-900 font-medium">@Model.Categoria?.Nome</dd>
                </div>
                @if (Model.Ano.HasValue)
                {
                    <div class="flex justify-between text-sm">
                        <dt class="text-gray-500">Ano:</dt>
                        <dd class="text-gray-900 font-medium">@Model.Ano</dd>
                    </div>
                }
                <div class="flex justify-between text-sm">
                    <dt class="text-gray-500">Status:</dt>
                    <dd class="text-gray-900 font-medium">
                        @(Model.Status == StatusLeitura.Lido ? "Lido" :
                          Model.Status == StatusLeitura.Lendo ? "Lendo" : "Quero Ler")
                    </dd>
                </div>
            </dl>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="flex space-x-3">
                <button type="submit" 
                        class="flex-1 px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition">
                    Confirmar Exclusão
                </button>
                <a asp-action="Index" 
                   class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
