@model PersonalBiblio.Models.Categoria

@{
    ViewData["Title"] = "Excluir Categoria";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a asp-action="Index" class="text-primary hover:text-blue-700 text-sm font-medium">
            ← Voltar para lista
        </a>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
        <div class="flex items-center mb-6">
            <div class="flex-shrink-0">
                <svg class="h-12 w-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
            </div>
            <div class="ml-4">
                <h1 class="text-2xl font-bold text-gray-900">Confirmar Exclusão</h1>
                <p class="text-sm text-gray-600 mt-1">Esta ação não pode ser desfeita.</p>
            </div>
        </div>

        <div class="bg-gray-50 rounded-lg p-4 mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">@Model.Nome</h3>
            
            @if (!string.IsNullOrEmpty(Model.Descricao))
            {
                <p class="text-gray-600 mb-4">@Model.Descricao</p>
            }

            <div class="flex items-center">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary text-white">
                    @Model.Livros.Count livros associados
                </span>
            </div>

            @if (Model.Livros.Any())
            {
                <div class="mt-4 p-3 bg-yellow-50 border border-yellow-200 rounded-md">
                    <p class="text-sm text-yellow-800">
                        <strong>Atenção:</strong> Esta categoria possui @Model.Livros.Count livro(s) associado(s). 
                        Não será possível excluí-la enquanto houver livros vinculados.
                    </p>
                </div>
            }
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="flex space-x-3">
                <button type="submit" 
                        class="flex-1 px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition"
                        @(Model.Livros.Any() ? "disabled" : "")>
                    Confirmar Exclusão
                </button>
                <a asp-action="Index" 
                   class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
